---
layout: null
permalink: /blog/blog.json
---
[
  {% for post in site.blog %}
    {
      "slug": "{{ post.slug }}",
      "title": "{{ post.title | escape }}",
      "date": "{{ post.date | date_to_xmlschema }}",
      "snippet": "{{ post.content | strip_html | strip_newlines | truncate: 200 }}"
    }{{ "" if forloop.last }}{{ "," unless forloop.last }}
  {% endfor %}
]
